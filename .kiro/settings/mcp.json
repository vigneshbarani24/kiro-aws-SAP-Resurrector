{
  "mcpServers": {
    "abap-analyzer": {
      "command": "python3",
      "args": [".kiro/mcp/abap-analyzer.py"],
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "disabled": false,
      "autoApprove": [
        "parse_abap",
        "detect_sap_patterns",
        "extract_data_model"
      ]
    },
    "sap-cap": {
      "command": "npx",
      "args": ["-y", "@cap-js/mcp-server"],
      "env": {
        "NODE_ENV": "production"
      },
      "disabled": false,
      "autoApprove": [
        "cap_lookup_pattern",
        "cap_validate_cds",
        "cap_get_service_template"
      ]
    },
    "sap-ui5": {
      "command": "npx",
      "args": ["-y", "@ui5/mcp-server"],
      "env": {
        "NODE_ENV": "production"
      },
      "disabled": false,
      "autoApprove": [
        "ui5_get_component",
        "ui5_lookup_control",
        "ui5_generate_view"
      ]
    }
  }
}
